{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "$constants": [
        "./src/constants.ts"
      ],
      "$types": [
        "./src/types.ts"
      ],
      "$utils": [
        "./src/utils"
      ],
      "$utils/*": [
        "./src/utils/*"
      ],
      "$src": [
        "./src"
      ],
      "$src/*": [
        "./src/*"
      ],
    },
    /* Bundler mode */
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    /* Linting */
    "strict": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src",
    "playwright.config.ts",
    "tests",
    "env.d.ts"
  ]
}