{
  "name": "@aliser/logger",
  "version": "0.2.5",
  "description": "Logs messsages and arbitrary data to the console, can throw errors.",
  "type": "module",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly",
    "test": "npm run test:e2e",
    "test:coverage": "npm run test:e2e:coverage",
    "test:e2e": "playwright test",
    "test:e2e:chromium": "npm run test:e2e -- --project=chromium",
    "test:e2e:coverage": "cross-env COVERAGE=true playwright test",
    "test:e2e:coverage:chromium": "npm run test:e2e:coverage -- --project=chromium",
    "test:e2e:server": "vite dev",
    "sendit": "npm run add && npm run commit && npm run push",
    "fuckit": "npm run add && npm run commit && npm run release && npm run push",
    "add": "git add .",
    "commit": "cz",
    "release": "standard-version",
    "push": "git push --follow-tags origin"
  },
  "directories": {
    "test": "tests"
  },
  "devDependencies": {
    "@playwright/test": "^1.32.3",
    "@types/fs-extra": "^11.0.1",
    "@types/istanbul-lib-coverage": "^2.0.4",
    "@types/istanbul-lib-report": "^3.0.0",
    "@types/istanbul-reports": "^3.0.1",
    "babel-plugin-istanbul": "^6.1.1",
    "cross-env": "^7.0.3",
    "crypto-random-string": "^5.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^16.0.3",
    "fs-extra": "^11.1.1",
    "istanbul-lib-coverage": "^3.2.0",
    "istanbul-lib-report": "^3.0.0",
    "istanbul-reports": "^3.1.5",
    "playwright-test-coverage": "^1.2.12",
    "standard-version": "^9.5.0",
    "typescript": "^5.0.4",
    "v8-to-istanbul": "^9.1.0",
    "vite": "^4.2.2",
    "vite-tsconfig-paths": "^4.2.0"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
